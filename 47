import React, { useState, useEffect } from 'react';
import toast from 'react-hot-toast';
import { useUI } from '@/context/UIContext';
import { updateBatch } from '@/services/api';
import Modal from '@/components/ui/Modal';
import { Input } from '@/components/ui/Input';
import { Label } from '@/components/ui/Label';
import { Textarea } from '@/components/ui/Textarea';
import { Button } from '@/components/ui/Button';

interface EditBatchModalProps {
  isOpen: boolean;
  onClose: () => void;
}

const EditBatchModal: React.FC<EditBatchModalProps> = ({ isOpen, onClose }) => {
  const { modalData, refreshData, closeModal } = useUI();
  const [name, setName] = useState('');
  const [description, setDescription] = useState('');
  const [isSubmitting, setIsSubmitting] = useState(false);

  useEffect(() => {
    if (isOpen && modalData) {
      setName(modalData.name || '');
      setDescription(modalData.description || '');
    }
  }, [isOpen, modalData]);

  const handleClose = () => {
    onClose();
    // Reset form on close
    setName('');
    setDescription('');
  }

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!name.trim()) {
      toast.error('Batch name is required.');
      return;
    }
    if (!modalData?.id) {
        toast.error('Cannot find batch to update.');
        return;
    }

    setIsSubmitting(true);
    const promise = updateBatch(modalData.id, { name, description: description || null });

    toast.promise(promise, {
      loading: 'Updating batch...',
      success: () => {
        refreshData();
        handleClose();
        return 'Batch updated successfully!';
      },
      error: (err) => `Error: ${err.message}`,
    }).finally(() => {
      setIsSubmitting(false);
    });
  };

  return (
    <Modal isOpen={isOpen} onClose={handleClose} title="Edit Batch">
      <form onSubmit={handleSubmit} className="space-y-4">
        <div className="space-y-2">
          <Label htmlFor="edit-batch-name">Batch Name</Label>
          <Input 
            id="edit-batch-name" 
            value={name}
            onChange={(e) => setName(e.target.value)}
            placeholder="e.g., React Advanced - Cohort 3"
            required 
          />
        </div>
        <div className="space-y-2">
          <Label htmlFor="edit-batch-description">Description (Optional)</Label>
          <Textarea
            id="edit-batch-description"
            value={description}
            onChange={(e) => setDescription(e.target.value)}
            placeholder="A brief description of the batch."
          />
        </div>
        <div className="flex justify-end gap-3 pt-4">
          <Button type="button" variant="secondary" onClick={handleClose} disabled={isSubmitting}>
            Cancel
          </Button>
          <Button type="submit" disabled={isSubmitting}>
            {isSubmitting ? 'Saving...' : 'Save Changes'}
          </Button>
        </div>
      </form>
    </Modal>
  );
};

export default EditBatchModal;
