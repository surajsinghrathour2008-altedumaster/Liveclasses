import React from 'react';
import { useLocation } from 'react-router-dom';

const PlaceholderPage: React.FC = () => {
  const location = useLocation();
  const pageName = location.pathname.split('/').pop()?.replace('-', ' ') || 'Page';
  
  return (
    <div className="flex items-center justify-center h-full">
      <div className="text-center">
        <h1 className="text-4xl font-bold text-white capitalize">{pageName}</h1>
        <p className="mt-4 text-gray-400">This page is under construction.</p>
        <p className="text-gray-500">Functionality will be added in the next steps.</p>
      </div>
    </div>
  );
};

export default PlaceholderPage;
