import React from 'react';
import { Search, Bell } from 'lucide-react';
import { useUI } from '@/context/UIContext';

const Header: React.FC = () => {
  const { toggleNotificationPanel } = useUI();
  return (
    <header className="flex-grow h-20 bg-gray-900 flex items-center justify-between px-8 border-b border-gray-800">
      <div className="relative">
        <Search className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" size={20} />
        <input
          type="text"
          placeholder="Search..."
          className="bg-gray-800 border border-gray-700 rounded-lg pl-10 pr-4 py-2 w-80 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-accent-start"
        />
      </div>
      <div>
        <button onClick={toggleNotificationPanel} className="p-2 rounded-full text-gray-400 hover:bg-gray-700 hover:text-white transition-colors relative">
          <Bell size={22} />
        </button>
      </div>
    </header>
  );
};

export default Header;
